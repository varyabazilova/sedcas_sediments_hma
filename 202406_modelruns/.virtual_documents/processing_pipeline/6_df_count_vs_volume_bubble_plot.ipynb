cb = plt.colorbar(
    plt.cm.ScalarMappable(cmap=cmap_discrete, norm=norm),
    cax=ax, orientation='horizontal', ticks=bounds
)
cb.set_label('% Value')
plt.title("10-Color Colorblind-Friendly Colormap (0–100%)")
plt.show()



