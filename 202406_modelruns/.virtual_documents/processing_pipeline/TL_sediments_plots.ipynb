def group_data(data, landcover_idx):
    grouped = (
        data.groupby(['month', 'elevation_bin'])['Qstl']
        .mean()
        .reset_index()
    )
    # Rename the 'Qstl' column to include the landcover index
    grouped = grouped.rename(columns={'Qstl': f'Qstl{landcover_idx}'})
    return grouped

